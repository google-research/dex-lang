-- Test custom list monoid with accum
def adjacencyMatrixToEdgeList {n} (mat: n=>n=>Bool) : List (n & n) =
  yieldAccum (ListMonoid (n & n)) \list.
    for (i, j).
      if mat.i.j then
        append list (i, j)

test_edges = [[False, False, True, False],
              [True, False, True, True],
              [False, True, False, True],
