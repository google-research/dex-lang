def symmetrizeInPlace {n} (mat:n=>n=>Float) : n=>n=>Float =
  yieldState mat \ref.
    for i j.
       x = get ref!i!j
       y = get ref!j!i
       avg = (x + y) / 2.0
       ref!i!j := avg
       ref!j!i := avg

