def abToEither {a b} : Iso {a:a | b:b} (a|b) =
  fwd = \v.  case v of
    {|a=x|} -> Left x
    {|b=x|} -> Right x
  bwd = \v. case v of
    Left x  -> {|a=x|}
    Right x -> {|b=x|}
  MkIso {fwd, bwd}
instance {n m} [Ix n, Ix m] Ix {a:n | b:m}
  size = size n + size m
  ordinal = ordinal <<< app_iso abToEither
  unsafe_from_ordinal = unsafe_from_ordinal _ >>> rev_iso abToEither

