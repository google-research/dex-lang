:p
  s : { a : Float | b : Float } = case 2 == 2 of
    False -> {| a=2.0 |}
    True -> {| b=5.0 |}
  f = \x.
    case s of
      {| a=a |} -> 2.0 * (a + x)
      {| b=b |} -> b * x
  (y, df) = linearize f 2.0
  checkDerivBase f 2.0
> True

:p
  f = max 0.0
