> True

:p
  f = \c.
    v = for i:(Fin 2). 2.0
    (c, v) = yieldState (c, v) \r. for i:(Fin 2).
      (c, v) = get r
      r := (c + sum v, v)
    c
  checkDeriv f 1.0
> True
