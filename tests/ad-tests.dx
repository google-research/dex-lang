:p
  f : Float -> Float = \x.
    x2 = x * x
    withReader x \xr.
      withReader x2 \x2r.
        5.0 * (ask x2r) + 4.0 * (ask xr) + 2.0
  checkDeriv f 2.0
> True

:p
  f : Float -> Float = \x.
    yieldState x \xr.
      for i:(Fin 2).
        xr := get xr * get xr
  checkDeriv f 2.0
> True

:p
  f = \rec.
    ({x=x, y=y, z=z}) = rec
    x * y * IToF z
  (checkDeriv (\x. f {x=x, y=4.0, z=5}) 2.0, checkDeriv (\y. f {x=2.0, y=y, z=5}) 4.0)
> (True, True)

