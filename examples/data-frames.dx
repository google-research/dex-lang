def head' {n a} (xs:n=>a) (num:Int) : Maybe ((Fin num)=>a) =
  -- TODO: allow negative arguments to `head'`
  s = size n
  case s < num of
    True -> Nothing
    False -> Just for i:(Fin num). xs.(unsafeFromOrdinal n (ordinal i))

