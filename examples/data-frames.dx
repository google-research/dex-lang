def selectRowsMask {n a} (t:n=>a) (shouldTake:n=>Bool) : List a =
  concat $ for i.
    case shouldTake.i of
      True  -> AsList _ [t.i]
      False -> mempty

:p selectRowsMask students [True, False, True]
:p selectRowsMask gradebook [False, False, True]


