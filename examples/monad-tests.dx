def symmetrizeInPlace (mat:n=>n=>Float) : n=>n=>Float =
  snd $ withState mat \ref.
    for i j.
       x = get ref!i!j
       y = get ref!j!i
       avg = (x + y) / 2.0
       ref!i!j := avg
       ref!j!i := avg

symmetrizeInPlace [[1.,2.],[3.,4.]]
> [[1.0, 2.5], [2.5, 4.0]]

