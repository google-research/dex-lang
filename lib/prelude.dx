def catch {a eff} (f:Unit -> {Except|eff} a) : {|eff} Maybe a =
  ans = %catchException f
  case %sumToVariant ans of
    {|c=()   |} -> Nothing
    {|c|c=val|} -> Just val

def throw {a} (_:Unit) : {Except} a =
  %throwException a

def assert (b:Bool) : {Except} Unit =
  if not b then throw ()


