instance Show Int32
  show = \x. unsafe_io do
    (n, ptr) = showInt32 x
    string_from_char_ptr n $ MkPtr ptr

foreign "showInt64" showInt64 : Int64 -> {IO} (Nat & RawPtr)

instance Show Int64
  show = \x. unsafe_io do
