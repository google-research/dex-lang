  sin    = \x:Float64. %sin    x
  cos    = \x:Float64. %cos    x
  tan    = \x:Float64. %tan    x
  sinh   = float64_sinh
  cosh   = float64_cosh
  tanh   = float64_tanh
  floor  = \x:Float64. %floor  x
