  with_c_string f \(MkCString ptr).
    removeFFI ptr
  ()

def with_file {a}
      (f:FilePath) (mode:StreamMode)
      (action: Stream mode -> {IO} a)
      : {IO} a =
  stream = fopen f mode
  (MkStream stream') = stream
  if stream' == null_raw_ptr
    then
      error $ "Unable to open file: " <> f
    else
      result = action stream
      fclose stream
      result

